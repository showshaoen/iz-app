<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../include/head.ejs')  %>

  <title><%=title  %></title>
</head>

<body>

  <%- include('../include/navbar.ejs') %>
  <%- include('../include/modals.ejs') %>

  <div class="container py-3 h-100">
    <div class="row gy-3 d-flex justify-content-center">
      <div class="col-lg-8">
        <div class="card p-3">
          <form id="scheduleForm">

            <div class="mb-3">
              <label for="type" class="col-form-label">Type</label>
              <select class="form-select" name="type">
                <option value="daily">Daily</option>
                <option value="reminder">Reminder</option>
                <option value="tweetDaily">Tweet Daily Schedule</option>
              </select>
            </div>

            <div class="mb-3">
              <label for="date" class="col-form-label">Date (e.g. 20220813)</label>
              <input type="text" class="form-control" name="date" required>
            </div>

            <div class="d-flex justify-content-center">
              <button type="submit" name="submitBtn" class="btn btn-primary">Submit</button>
            </div>
          </form>

          <div class="mt-3 mb-3" id="contentDisplay">

            <!-- <textarea class="form-control" name="content" id="contentTextArea" rows="15" readonly></textarea> -->
          </div>
        </div>
      </div>
    </div>

  </div>



  <script type="text/javascript" src="/js/calendar/daily.js"></script>
</body>

</html>